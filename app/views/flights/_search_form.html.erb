
<div class="search-div">

<%= form_with(url: "/flights", method: "get", local: true) do %>
<% end %>
<h2>Search Flights:</h2>

<br>
<h3>Fly From</h3>
<%= select_tag(:departure_airport, options_for_select(@departure_airport_options), class: "drop-down-box") %>

<br>
<br>

<h3>Fly To</h3>

<%= select_tag(:arrival_airport, options_for_select(@arrival_airport_options), class: "drop-down-box") %>

<br>
<br>

<h3>Number of Passengers</h3>
<%= select_tag(:number_of_passengers, options_for_select(1..4), class: "drop-down-box") %>

<br>
<br>

<h3>Date of Departure</h3>
<%= select_tag(:departure_date, options_for_select(@date_options), class: "drop-down-box") %>

<br><br><br>

<%= submit_tag("Search Flights", class: "search-btn") %>


<br><br>



    
</select>

</div>